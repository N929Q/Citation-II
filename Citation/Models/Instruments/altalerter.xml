<PropertyList>

  <path>altalerter.ac</path>

  <animation>
    <type>select</type>
    <object-name>altalerter.digit100</object-name>
    <object-name>altalerter.digit10</object-name>
    <object-name>altalerter.digit1</object-name>
    <condition>
      <property>systems/electrical/outputs/main-left-xover/dc-ap</property>
    </condition>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>altalerter.digit100</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>0.00001</factor>
    <step>10000</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>altalerter.digit10</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>0.0001</factor>
    <step>1000</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>altalerter.digit1</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <factor>0.001</factor>
    <step>100</step>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--  Hotspots -->

  <animation>
    <type>knob</type>
    <object-name>altalerter.set</object-name>
    <property>autopilot/settings/target-altitude-ft</property>
    <value>1</value>
    <center>
      <x-m>0.0109</x-m>
      <y-m>0.0178</y-m>
      <z-m>-0.0010</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <factor>1</factor>
    <action>
      <binding>
        <condition>
          <property>systems/electrical/outputs/main-left-xover/dc-ap</property>
        </condition>
        <command>property-adjust</command>
        <property>autopilot/settings/target-altitude-ft</property>
        <factor>100</factor>
        <min>500</min>
        <max>50000</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>target-altitude</tooltip-id>
        <label>Target altitude: %d ft</label>
        <property>autopilot/settings/target-altitude-ft</property>
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>altalerter.dim</object-name>
    <property>controls/lighting/altitude-alerter-dim</property>
    <factor>300</factor>
    <center>
      <x-m>0.0027</x-m>
      <y-m>-0.0184</y-m>
      <z-m>-0.0097</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/lighting/altitude-alerter-dim</property>
        <factor>0.04</factor>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>altimeter-dim</tooltip-id>
        <label>Dimming: %d%%</label>
        <mapping>percent</mapping>
        <property>controls/lighting/altitude-alerter-dim</property>
      </binding>
    </hovered>
  </animation>

<!-- Panel Lights (only for quality-level=0) -->
    <animation>
        <type>material</type>
        <condition>
            <equals>
                <property>/sim/rendering/shaders/quality-level</property>
                <value>0</value>
            </equals>
        </condition>
        <object-name>alt.bezel</object-name>
        <object-name>alt.knob</object-name>
        <object-name>alt.warn</object-name>
        <emission>
            <red>1.0</red>
            <green>0.8</green>
            <blue>0.6</blue>
            <factor-prop>controls/lighting/panel-average-lighting</factor-prop>
        </emission>
    </animation>

<!-- Instrument Lights -->
    <animation>
        <type>material</type>
        <object-name>alt.face</object-name>
        <object-name>alt.needle</object-name>
        <object-name>alt.invalid</object-name>
        <object-name>alt.10</object-name>
        <object-name>alt.100</object-name>
        <object-name>alt.1000</object-name>
        <object-name>alt.1000.low</object-name>
        <object-name>alt.10000</object-name>
        <object-name>alt.10000.low</object-name>
        <object-name>alt.neg</object-name>
        <object-name>alt.inhg01</object-name>
        <object-name>alt.inhg02</object-name>
        <object-name>alt.inhg03</object-name>
        <object-name>alt.inhg04</object-name>
        <object-name>alt.hpa01</object-name>
        <object-name>alt.hpa02</object-name>
        <object-name>alt.hpa03</object-name>
        <object-name>alt.hpa04</object-name>
        <emission>
            <red>1.0</red>
            <green>0.8</green>
            <blue>0.6</blue>
            <factor-prop>controls/lighting/instrument-light-emission</factor-prop>
        </emission>
    </animation>

    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>alt.glass</object-name>
    </effect>

